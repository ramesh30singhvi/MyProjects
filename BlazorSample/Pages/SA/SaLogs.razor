@page "/sa/configuration/logs"
@layout SaLayout

@attribute [Authorize]

<AuthorizeView>
    <Authorized>
        <Title Value="@title"></Title>

        <div class="py-3">
            <div class="row justify-content-between align-items-center">
                <div class="col-md-auto">
                    <h5 class="mb-0"><a href="sa/configuration" class="btn btn-falcon-default btn-sm px-2 me-3" title="Back"><span class="far fa-arrow-left me-1"></span></a><span class="far fa-file-medical-alt me-2"></span>Logs</h5>
                </div>
                <div class="col-md-auto"></div>
            </div>
        </div>

        <div class="row my-4">
            <div class="col-sm-6 col-md-4 mb-3">
                <div class="d-flex position-relative mb-2">
                    <span class="far fa-exclamation-triangle fa-2x fa-fw me-2"></span>
                    <div class="flex-1">
                        <h6 class="fs-0 mb-0"><a class="stretched-link" href="sa/configuration/logs/client-error-log">Website Error Logs</a></h6>
                        <p class="fs--2">Error logs for the CellarPass Client front end.</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-md-4 mb-3">
                <div class="d-flex position-relative mb-2">
                    <span class="far fa-file-exclamation fa-2x fa-fw me-2"></span>
                    <div class="flex-1">
                        <h6 class="fs-0 mb-0"><a class="stretched-link" href="sa/configuration/logs/client-error-log">Admin Error Logs</a></h6>
                        <p class="fs--2">Error logs for the CellarPass Admin.</p>
                    </div>
                </div>
            </div>
        </div>


    </Authorized>
</AuthorizeView>


@code
{
    bool isDisabledModalVisible = false;

    private string title = "Logs | Synergy Commerce Super Admin  Panel";


    [Parameter]
    public int Id { get; set; }


}
