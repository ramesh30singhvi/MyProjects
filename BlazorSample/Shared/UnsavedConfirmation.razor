<SfDialog IsModal="true" Width="400px" ShowCloseIcon="true" @bind-Visible="OpenUnsavedDialog">
    <DialogTemplates>
        <Header><h5 class="modal-title" id="modalLabel">Unsaved Changes</h5> </Header>
        <Content>
            <div class="col-12 text-center">
                <i class="fa-light fa-circle-exclamation fa-4x text-warning my-4"></i>
            </div>
            <div class="col-12 text-center">
                <h5>Are you sure?</h5>
                <p class="fs-0">You have unsaved changes.</p>
            </div>
        </Content>
        <FooterTemplate>
            <button type="button" class="btn btn-secondary" @onclick="DialogClose">Cancel</button>
            <button type="button" class="btn btn-primary" @onclick="UnsaveConfired">Yes</button>
        </FooterTemplate>
    </DialogTemplates>
    <DialogEvents Closed="@DialogClose"></DialogEvents>
    <DialogAnimationSettings Effect="@DialogEffect.Zoom"></DialogAnimationSettings>
</SfDialog>


@code {
    [Parameter]
    public bool OpenUnsavedDialog { get; set; }

    [Parameter]
    public EventCallback OnDialogClose { get; set; }

    protected async Task DialogClose()
    {
        await OnDialogClose.InvokeAsync();
    }

    [Parameter]
    public EventCallback OnUnsavedConfirmed { get; set; }

    protected async Task UnsaveConfired()
    {
        await OnUnsavedConfirmed.InvokeAsync();
    }
}